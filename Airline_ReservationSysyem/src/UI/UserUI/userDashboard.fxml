            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#btnLogoutClicked" style="-fx-background-color: #2596be;" text="Log out" textFill="WHITE" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageView" fitHeight="656.0" fitWidth="580.0" pickOnBounds="true" smooth="false" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>

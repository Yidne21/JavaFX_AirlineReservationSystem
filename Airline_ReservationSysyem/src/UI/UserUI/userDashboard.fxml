<BorderPane fx:id="rootBorderpane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #145369;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userDashBoardController">
   <left>
      <VBox fx:id="vbox" prefHeight="656.0" prefWidth="199.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" VBox.vgrow="NEVER" />
            <Label fx:id="LableName" text="Name" textFill="#041014">
               <font>
                  <Font size="23.0" />
               </font></Label>
         </children>
      </VBox>
   </left>
   <top>
      <HBox spacing="5.0" style="-fx-background-color: #041014;" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btnAvilableFlight" mnemonicParsing="false" onAction="#btnAvilableFlightCliked" style="-fx-background-color: #2596be;" text="Avilable Flight" textFill="WHITE" />
